<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Senator Ted Cruz (R - TX)"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:id="@+id/imageView4"
        android:src="@drawable/cruz" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Term End: Jan 3, 2019"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/comm"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/comm"
                android:padding="0dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/bils"
                android:layout_width="360dp"
                android:layout_height="220dp"
                android:src="@drawable/bills"
                android:padding="0dp"
                android:scaleType="fitXY" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Swipe to scroll"
        android:textColor="#ffffff"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />


</LinearLayout><!-- From: file:/C:/Users/Nitin/Box%20Sync/AndroidStudioProjects/prog-02-represent-nitinmani/App/Represent!/mobile/src/main/res/layout/candidate_info.xml -->