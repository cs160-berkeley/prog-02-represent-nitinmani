<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/detailedImage"
            android:layout_below="@+id/detailedName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/detailedName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/termEnd"
            android:layout_below="@+id/detailedImage"
            android:layout_centerHorizontal="true" />

        <ListView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/committees"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bills"
            android:layout_above="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="52dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bills"
            android:id="@+id/textView"
            android:textSize="24dp"
            android:layout_above="@+id/bills"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Committees"
            android:id="@+id/textView2"
            android:textSize="24dp"
            android:layout_above="@+id/committees"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>